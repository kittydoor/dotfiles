# host specific configuration
# nyaa-core

### Idle configuration
exec swayidle -w \
  timeout 1500 'swaylock -f -c 000000' \
  timeout 1500 'swaymsg "output * dpms off"' \
        resume 'swaymsg "output * dpms on"' \
  before-sleep 'swaylock -f -c 000000'

### Outputs
set $primary_output HDMI-A-1
set $secondary_output HDMI-A-2

output $primary_output {
  pos 0 0 res 2560x1440
  bg #000000 solid_color
}

output $secondary_output {
  pos 2560 360 res 1920x1080
  bg #000000 solid_color
}

output $primary_output enable
output $secondary_output enable

workspace $ws1 output $primary_output
workspace $ws2 output $secondary_output

focus output $primary_output

# external displays
set $mode_display "display:  [s]ingle  [d]ouble"
mode $mode_display {
  # deactivate secondary display
  bindsym s output $secondary_output disable, mode "default"

  # activate secondary display
  bindsym d output $secondary_output enable, mode "default"

  # back to normal: Enter or Escape or $mod+r
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+x mode "default"
}

bindsym $mod+x mode $mode_display
